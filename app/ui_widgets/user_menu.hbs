
{{#if showUser}}
    <button class="btn btn-clear btn-large dropdown-toggle">
        <ul class="dropdown-menu">
            {{#if isRegisteredUser }}
                <li><a id="ActionShowProfile">
                    <i class="icon-user"></i>
                    Profile
                </a></li>
            {{/if}}
            <li><a id="ActionLogOut">
                <i class="icon-off"></i>
                Log Out
            </a></li>
        </ul>
        <i class="avatar">
            {{#if imageUrl}}
                <img src="{{imageUrl}}" alt="{{userName}}'s Avatar" />
            {{/if}}
        </i>
        <span>{{userName}}</span>
        <i class="icon-chevron-sign-down muted"></i>
    </button>
{{else}}
    <button id="ActionShowLogin" class="btn btn-link btn-large" href="">
        <i class="icon-lock icon-large"></i>
        Log In
    </button>
{{/if}}
