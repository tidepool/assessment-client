

    <div class="modal-body">
        <button class="btn btn-block btn-primary btn-large facebook" id="SignInFacebook">
          <i class="icon-facebook icon-large"></i>
          Sign in <span class="muted">with</span> Facebook
        </button>

        <div class="divider">
            <b class="rule"></b>
            <p>Or</p>
            <b class="rule"></b>
        </div>

        <h3>
            Use Your Email
            <div class="btn-group btn-rocker" data-toggle="buttons-radio">
                <button id="ActionSignIn" class="btn active" value="signIn">Sign In</button>
                <button id="ActionRegister" class="btn" value="register">Register</button>
            </div>
        </h3>

        <form id="SigninForm" class="form-inline" action="">
            <input id="Login-email" class="large input-block-level" type="email" placeholder="Email Address" />
            <input id="Login-pass" class="large input-block-level" type="password" placeholder="Password" />
            <input id="Login-confirm" class="large input-block-level" type="password" style="display:none;" placeholder="Confirm Password" />
            <button id="Login-submit" class="btn btn-large btn-block" type="submit">Get Started</button>
            <label for="Login-remember" class="small">
                <input id="Login-remember" type="checkbox" checked />
                Remember Me
            </label>
            <a id="Login-forgot" class="pull-right small" href="">Forgot Your Password?</a>
        </form>
    </div>

