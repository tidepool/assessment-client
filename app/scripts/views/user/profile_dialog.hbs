<form id="profile" class="form-horizontal" action=''>
  <fieldset>
    <div class="control-group">
      <label class="control-label" for="email">E-mail</label>
      <div class="controls">
        <input type="text" id="email" name="email" placeholder="" class="input-xlarge" value="{{user.email}}">
      </div>
    </div>
 
    <div class="control-group">
      <label class="control-label" for="password">Name</label>
      <div class="controls">
        <input type="text" id="password" name="password" placeholder="" class="input-xlarge" value="{{user.name}}">
      </div>
    </div>
 
  </fieldset>
</form>