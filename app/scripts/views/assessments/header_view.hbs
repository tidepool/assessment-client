<div class="inner">

    <a class="logo" href=""></a>

    <nav>
        <ul>
            <li><a href="#About">About</a></li>
            <li><a href="#Team">Team</a></li>
            <li><a href="#Investors">Investors</a></li>
        </ul>
    </nav>

    <div class="loginArea">
        {{#if loggedIn}}
            <li class="dropdown">
                {{#if isRegisteredUser }}
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="halflings-icon white user"></i>
                        <span id="user_name">{{userName}}</span>
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a id="profile">
                            <i class="halflings-icon white user"></i>
                            Profile
                        </a>
                        </li>
                        <li><a id="logout">
                            <i class="halflings-icon white off"></i>
                            Logout
                        </a>
                        </li>
                    </ul>
                {{else}}
                    <span id="user_name">Welcome Guest</span>
                {{/if}}
            </li>
        {{else}}
            <a class="btn btn-primary btn-large" id="login" href="#">
                <i class="icon-lock icon-large"></i>
                Log In
            </a>
        {{/if}}
    </div>

</div>




