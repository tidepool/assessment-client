

<div class="widget">
    <div class="hero">
        {{#if logo_url}}
            <img class="personalityBadge" src="/images/badges/{{logo_url}}" alt="{{name}}">
        {{/if}}
        {{{one_liner}}}
    </div>
    <ul>
        {{#each bullet_description}}
            <li>
                <i class="icon-bookmark icon-2x"></i>
                {{{ this }}}
            </li>
        {{/each}}
    </ul>

    <aside class="sharingIsCaring">
        <i id="ActionShareEmail-Personality" class="icon-envelope" title="Share by Email"></i>
        <i id="ActionShareTwitter-Personality" class="icon-twitter" title="Share on Twitter"></i>
        <i id="ActionShareFacebook-Personality" class="icon-facebook" title="Share using Facebook"></i>
    </aside>
</div>


