<div class="modal-dialog">
    <div class="modal-content">
        {{#if title}}
            <div class="modal-header">
                {{#unless mustUseButton}}
                    <button type="button" class="close" data-dismiss="modal">Ã—</button>
                {{/unless}}
                <h2>{{{title}}}</h2>
            </div>
        {{/if}}

        <div class="modal-body" id="PerchBody">
            {{{content}}}
        </div>
        {{#if btn1Text}}
            <div class="modal-footer">
                <button id="PerchBtn1" tabindex="1" class="btn {{btn1ClassName}}">{{btn1Text}}</button>
            </div>
        {{/if}}
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
